<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:tableRm="sap.ui.table.rowmodes"
    controllerName="zsbu4demopage.ext.main.Main">

    <Page id="Page" title="Demo">
        <content>
            <VBox id="inputBox" class="sapUiSmallMargin">
                <Input id="tableInput" placeholder="Enter table name" width="30em" liveChange="onUppercaseInput"/>
                <Button id="executeBtn" text="Execute" type="Emphasized" press="onExecute"/>
            </VBox>

            <!-- Grid Table hiển thị dynamic -->
            <Toolbar id="dynamicTableToolbar">
                <Title id="dynamicTableTitle" text="Dynamic Table"/>
                <ToolbarSpacer id="dynamicTableToolbarSpacer"/>
                <Button id="deleteBtn" text="Delete" type="Negative" press="onDeleteSelected"/>
            </Toolbar>
            <table:Table id="dynamicTable" selectionMode="MultiToggle" selectionBehavior="RowSelector" enableSelectAll="true" alternateRowColors="true" class="sapUiResponsiveContentPadding">
                <table:rowMode>
                    <tableRm:Fixed id="dynamicTableFixedRowMode" rowCount="10"/>
                </table:rowMode>
            </table:Table>
        </content>
    </Page>
</mvc:View>
