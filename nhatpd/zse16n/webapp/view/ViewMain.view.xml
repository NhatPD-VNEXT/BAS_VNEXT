<mvc:View controllerName="zse16n.controller.ViewMain"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:plugins="sap.m.plugins"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:table="sap.ui.table"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    xmlns:sf="sap.ui.comp.smartfield"
    height="100%">
    
    <Page id="page" title="{i18n>title}">
        <content>
            <!-- Input Section -->
            <Panel id="inputPanel" headerText="Database Table" class="sapUiSmallMargin">
                <content>
                    <HBox  id="inputBox" class="sapUiSmallMargin">
                        <Input id="tableInput" placeholder="Enter table name" width="30em" liveChange="onUppercaseInput"/>
                        <Button id="executeBtn" text="Execute" type="Emphasized" press="onExecute"/>
                    </HBox >
                </content>
            </Panel>
            
            <!-- Smart Table Section -->
            <Panel id="tablePanel" headerText="Table Data" class="sapUiSmallMargin">
                <content>
                    <!-- SmartFilterBar placed above the SmartTable -->
                    <smartFilterBar:SmartFilterBar id="sfb" useToolbar="true" persistencyKey="SFB_Main"/>
                    <!-- Dynamic SmartTable will be created in controller and placed here -->
                    <VBox id="smartTableContainer" class="sapUiResponsiveContentPadding"/>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>